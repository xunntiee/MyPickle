{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/api/:path*"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/backend/(.*)",
            "dest": "/backend/server.js"
        }
    ]
}